---
import { Image } from "astro:assets";
import Envelope from "../../components/Envelope.astro";
import invitations from "../../data/invitations.json";
import { Icon } from "astro-icon/components";
import logo from "../../images/hg-logo.png";

export async function getStaticPaths() {
  return invitations.map((guest) => ({
    params: { slug: guest.slug },
    props: { guest },
  }));
}

const { guest } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Boda Heizel & Greudys</title>
    <meta property="og:title" content="Boda H & G" />
    <meta
      property="og:description"
      content={`Boda Heizel & Greudys. InvitaciÃ³n para ${guest.name}`}
    />
    <meta property="og:image" content="/wedding2.webp" />
    <meta property="og:url" content="https://heizel-y-greudys.vercel.app" />
    <meta property="og:type" content="website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Google Fonts: Cormorant Infant -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Infant&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Cormorant Infant", serif;
      }
    </style>
  </head>
  <body>
    <div class="flex items-center justify-center min-h-screen">
      <div class="max-w-2xl mx-auto p-8">
        <h1 class="text-4xl font-bold text-center">Nuestra Boda</h1>
        <div class="flex justify-center">
          <Image
            src={logo}
            alt="cristal"
            class="w-3/4 h-full object-cover rounded-full"
          />
        </div>
        <p class="text-lg text-center">
          Hemos reservado un lugar en su honor
        </p>
        <div class="flex items-center justify-center my-2">
          <div class="flex-grow border-t border-gray-300"></div>
          <Icon name="heart" size={20} class="text-lila-dark" />
          <div class="flex-grow border-t border-gray-300"></div>
        </div>
        <h2 class="text-2xl my-2 text-center">{guest.name}</h2>
        <div class="flex justify-center items-center mx-10">
          <Envelope name="Toca para abrir" href="/" />
        </div>
      </div>
    </div>
  </body>
</html>
