---
import { Image } from "astro:assets";
import invitations from "../../data/invitations.json";
import invitationPic from "../../images/invitation-pic.jpg";
import closedLetter from "../../images/closed-letter.jpg";
import arrow from "../../images/arrow.png";
import letterRectangle from "../../images/letter-rectangle.png";
import whiteSeal from "../../images/white-seal.png";

export async function getStaticPaths() {
  return invitations.map((guest) => ({
    params: { slug: guest.slug },
    props: { guest },
  }));
}

const { guest } = Astro.props;
const totalCircles = 5;
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Boda Heizel & Greudys</title>
    <meta property="og:title" content="Boda H & G" />
    <meta
      property="og:description"
      content={`Boda Heizel & Greudys. Invitación para ${guest.name}`}
    />
    <meta property="og:image" content="/wedding2.webp" />
    <meta property="og:url" content="https://heizel-y-greudys.vercel.app" />
    <meta property="og:type" content="website" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- Google Fonts: Cormorant Infant -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Infant&family=Italianno&family=Asul:wght@400;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="max-w-screen-sm mx-auto px-4">
      <div class="relative">
        <Image
          src={invitationPic}
          alt="invitation-pic"
          class="h-full object-cover w-full"
        />
        <h1 class="absolute bottom-[-25px] text-5xl font-italianno text-center w-full bg-opacity-70 bg-white text-emerald-900">
          Nuestra Boda
        </h1>
      </div>
      <h2 class="mt-5 font-asul text-3xl text-center text-emerald-900">
        GREUDYS & HEIZEL
      </h2>
      <h3 class="mt-4 text-center font-asul text-xl text-emerald-900">
        26-ABRIL-2025
      </h3>
      <a href="/">
        <div class="relative mx-12 mb-28">
          <Image
            src={closedLetter}
            alt="closed-letter"
            class="h-full object-cover w-full drop-shadow-md shadow-md rounded-lg"
          />
          <div class="absolute top-[40%] left-1/2 transform -translate-x-1/2 w-1/4 z-10">
            <Image src={whiteSeal} alt="white-seal" class="w-100" />
          </div>
          <div class="absolute top-[45%] left-[50%] w-1/2">
            <div class="relative">
              <Image src={letterRectangle} alt="rectangle" class="w-full" />
              <div
                class="absolute flex items-center font-asul text-lg text-emerald-900 text-center top-[5%] right-0 pr-2 h-[70%] w-[70%]"
              >
                <p class="font-asul text-lg/5 text-emerald-900 text-center">
                  {guest.name}
                </p>
              </div>
            </div>
          </div>
          <div class="absolute top-[60%] left-[25%] justify-center">
            <Image src={arrow} alt="arrow" class="w-1/2" />
          </div>
          <div
            class="absolute bottom-[-6rem] left-1/2 transform -translate-x-1/2 text-center w-3/4"
          >
            <p class="font-asul text-lg uppercase text-emerald-900">
              Toca para abrir invitación
            </p>
          </div>
        </div>
      </a>
      <p class="my-4 font-asul text-emerald-900 text-2xl text-center font-bold uppercase">
        Hemos reservado
      </p>
      <div class="flex justify-center space-x-4 my-2">
        {
          Array.from({ length: totalCircles }).map((_, index) => (
            <div
              class={`w-8 h-8 rounded-full border-2 border-gray-300 ${
                index < guest.tickets ? "bg-gray-300" : ""
              }`}
            />
          ))
        }
      </div>
      <div class="font-asul text-center text-emerald-900 text-lg">
        {guest.tickets} PASES
      </div>
      <p class="my-4 font-asul text-emerald-900 text-2xl text-center font-bold uppercase">
        En su honor
      </p>
    </div>
  </body>
</html>
