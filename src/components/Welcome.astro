---
import { Image } from 'astro:assets';
import ImageCarousel from "../components/ui/Carousel.astro";
import AstroCountdown from "../components/Countdown.astro";
import giftImage from "../images/regalo.jpg";
import cascadeImage from "../images/cascada.jpg";
import wedding1 from "../images/wedding1.webp";
import wedding2 from "../images/wedding2.webp";
import park from "../images/park.webp";
import weddingPlace from "../images/agua-santa.webp";
import dressMan from "../images/dress-man.webp";
import dressWoman from "../images/dress-woman.webp";
import Countdown from '../components/Countdown.astro';
import DateText from './ui/DateText.astro';
import DayText from './ui/DayText.astro';
import HourText from './ui/HourText.astro';

const images = [
  {
    src: wedding1,
    alt: "Imagen 1",
    caption: "Un amor",
  },
  {
    src: wedding2,
    alt: "Imagen 2",
    caption: "Para toda la vida",
  },
];

const place = {
  name: "Agua Santa",
  address: "Agua Viva, Las Cuibas",
  image: weddingPlace,
  googleMapsLink: "https://maps.app.goo.gl/JyYVbNDrPAdVMYHG7",
};

const confirmationLink = {
  url: "https://forms.gle/e1UCTdMFkSbYAZde7",
  text: "Confirmar aquí",
};
const weddingDate = new Date(Date.UTC(2025, 3, 26, 21, 0, 0));
---

<div id="welcome">
  <!-- Sección principal -->
  <section class="bg-gray-light py-4">
    <div class="flex justify-center">
      <h1 class="text-2xl tracking-wider mb-0 text-gray-700">
        Boda Greudys y Heizel
      </h1>
    </div>
  </section>

  <section>
    <ImageCarousel images={images} />
  </section>

  <section class="bg-gray-light py-4">
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12 text-center" />
    </div>

    <p class="text-xl tracking-wider text-center font-rosario uppercase px-4">
      Hay momentos en la vida que son especiales...
    </p>
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12 text-center" />
    </div>
  </section>

  <section>
    <div class="relative w-full h-[70vh]">
      <!-- Imagen -->
      <div
        class="absolute inset-0 transition-opacity duration-1000 ease-in-out"
      >
        <Image
          src={giftImage}
          alt={"regalo"}
          class="w-full h-full object-cover"
          loading="eager"
        />
        <!-- Contenedor de texto -->
        <div
          class="absolute inset-0 bg-black bg-opacity-30 flex flex-col justify-end items-center pb-12"
        >
          <p
            class="text-gray-200 text-lg text-center m-5 uppercase font-extralight font-rosario tracking-widest"
          >
            Compartirlos con las personas que quieres
          </p>
          <p
            class="text-gray-200 text-5xl text-center mx-4 uppercase font-extralight font-rosario tracking-wider"
          >
            Los convierte inolvidables
          </p>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-gray-light py-4">
    <!-- Líneas decorativas -->
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12" />
    </div>
  
    <!-- Texto introductorio -->
    <p class="text-xl tracking-wider text-center font-rosario uppercase px-4 mx-12">
      Es por eso que te invitamos
    </p>
  
    <!-- Línea decorativa inferior -->
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12" />
    </div>
  
    <!-- Imagen y texto debajo -->
    <div class="flex flex-col items-center">
      <div class="flex justify-center items-center">
        <div class="relative w-1/2 aspect-square">
          <Image
            src={cascadeImage}
            alt="cascada"
            class="w-full h-full object-cover rounded-full"
          />
        </div>
      </div>
      <p class="font-parisienne text-5xl mt-4 text-center">
        A nuestra Boda
      </p>
    </div>
  </section>
  <section class="bg-gray-light py-4 pt-5">

    <p class="text-xl tracking-wider text-center font-rosario uppercase px-4 mb-4">
      Reserva la fecha...
    </p>
    <div class="flex flex-col items-center">
      <div class="relative">
        {/* Imagen */}
        <Image
          src={park}
          alt="cascada"
          class="w-full h-full object-cover"
        />
        {/* Capa oscura */}
        <div class="absolute inset-0 bg-black bg-opacity-50 rounded-lg"></div>
        {/* Texto */}
        <div class="absolute bottom-0">
            <p class="mb-4 font-rosario text-md px-5 text-white uppercase opacity-75">
              <DayText targetDate={weddingDate} />
            </p>
          <p class="mb-4 text-5xl px-5 text-white uppercase">
            <DateText targetDate={weddingDate} />
          </p>
        </div>
      </div>
    </div>
    
    
  </section>

  <section class="bg-gray-light py-8">
    <div class="text-center">
      <p class="text-3xl font-parisienne text-gray-700 mb-6">
        Faltan para el gran día:
      </p>
      <Countdown targetDate={weddingDate} />
    </div>
  </section>
  <section class="bg-gray-light py-4">
    <!-- Líneas decorativas -->
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12" />
    </div>
  
    <!-- Texto introductorio -->
    <p class="text-xl tracking-wider text-center font-rosario uppercase px-4 mx-12">
      Ceremonia y recepción
    </p>
  
    <!-- Línea decorativa inferior -->
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12" />
    </div>
  
    <!-- Imagen y texto debajo -->
    <div class="flex flex-col items-center">
      <div class="flex justify-center items-center">
        <div class="relative w-1/2 aspect-square">
          <Image
            src={place.image}
            alt="cristal"
            class="w-full h-full object-cover rounded-full"
          />
        </div>
      </div>
      <p class="bg-lila text-white text-xl px-3 py-1 rounded-lg mt-4">
        <HourText targetDate={weddingDate} />
      </p>
      <p class="font-rosario text-2xl my-2 text-center">
        {place.name}
      </p>
      <p class="font-rosario text-xl mt-0 mb-2 text-center">
        {place.address}
      </p>
      <a
        class="bg-lila-light border border-lila text-lila-dark rounded-full px-3 py-2"
        href={place.googleMapsLink}
        target="_blank"
      >
        Ver ubicación
      </a>
    </div>
  </section>
  <section class="bg-lila-light py-4">
    <div class="flex justify-center my-4">
      <div class="w-1/4 aspect-square mx-2">
        <Image
          src={dressMan}
          alt="cristal"
          class="w-full h-full object-cover rounded-full"
        />
      </div>
      <div class="w-1/4 aspect-square mx-2">
        <Image
          src={dressWoman}
          alt="cristal"
          class="w-full h-full object-cover rounded-full"
        />
      </div>
    </div>
    
    <p class="text-xl tracking-wider text-center font-rosario uppercase px-4 mx-12">
      Código de vestimenta
    </p>
    <p class="text-center font-rosario text-4xl">Semi formal</p>
    <p class="text-center">Nota: El blanco está reservado para la novia</p>
    
  
  </section>
  <section class="bg-gray-light py-4">
    <!-- Líneas decorativas -->
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12" />
    </div>
  
    <!-- Texto introductorio -->
    <p class="text-xl tracking-wider text-center font-rosario uppercase px-4 mx-12">
      Itinerario
    </p>
  
    <!-- Línea decorativa inferior -->
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12" />
    </div>
  
    <!-- Imagen y texto debajo -->
    <div class="bg-lila-light text-lila-dark text-center p-4 mx-5 rounded-lg">
      <div class="grid grid-cols-2 gap-4">
        <div class="row-span-1">Ceremonia</div>
        <div class="row-span-1">5:00 pm</div>
        <div class="row-span-1">Recepción</div>
        <div class="row-span-1">6:00 pm</div>
        <div class="row-span-1">Cena</div>
        <div class="row-span-1">7:00 pm</div>
        <div class="row-span-1">Baile</div>
        <div class="row-span-1">8:00 pm</div>
        <div class="row-span-1">Despedida</div>
        <div class="row-span-1">10:00 pm</div>
      </div>
      
    </div>
  </section>
  <section class="bg-gray-light py-4">
    <!-- Líneas decorativas -->
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12" />
    </div>
  
    <!-- Texto introductorio -->
    <p class="text-xl tracking-wider text-center font-rosario uppercase px-4 mx-12">
      Confirmación de asistencia
    </p>
  
    <!-- Línea decorativa inferior -->
    <div class="flex justify-center">
      <hr class="my-4 border-lila border-t-2 w-12" />
    </div>
  
    <div class="flex flex-col items-center">
      
      <p class="font-rosario text-lg my-2 text-center mx-12">
        Por favor confirma tu asistencia 15 días antes del evento
      </p>
      <a class="bg-lila-light border border-lila text-lila-dark rounded-full px-3 py-2" href={confirmationLink.url} target="_blank">{confirmationLink.text}</a>
    </div>
  </section>
</div>

<script></script>