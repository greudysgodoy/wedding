---
import { Image } from 'astro:assets';
import ImageCarousel from "../components/ui/Carousel.astro";
import giftImage from "../images/regalo.jpg";
import cascadeImage from "../images/cascada.jpg";
import wedding1 from "../images/wedding1.webp";
import wedding2 from "../images/wedding2.webp";
import park from "../images/park.webp";
import casaCristal from "../images/casa-cristal.webp";
import dressMan from "../images/dress-man.webp";
import dressWoman from "../images/dress-woman.webp";

const images = [
  {
    src: wedding1,
    alt: "Imagen 1",
    caption: "Un nuevo comienzo",
  },
  {
    src: wedding2,
    alt: "Imagen 2",
    caption: "Para toda la vida",
  },
];
---
<script>
  const weddingDate = new Date(Date.UTC(2025, 3, 27, 21, 0, 0));

  // Función para actualizar la cuenta regresiva
  function updateCountdown() {
    const now = new Date();
    const distance = weddingDate instanceof Date && !isNaN(weddingDate.getTime()) ? weddingDate.getTime() - now.getTime() : 0;
    if (distance > 0) {
      const days = Math.floor(distance / (1000 * 60 * 60 * 24));
      const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
      const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
      const seconds = Math.floor((distance % (1000 * 60)) / 1000);

      // Actualizar el DOM
      const daysElement = document.getElementById("days");
      const hoursElement = document.getElementById("hours");
      const minutesElement = document.getElementById("minutes");
      const secondsElement = document.getElementById("seconds");

      if (daysElement) daysElement.textContent = days.toString();
      if (hoursElement) hoursElement.textContent = hours.toString();
      if (minutesElement) minutesElement.textContent = minutes.toString();
      if (secondsElement) secondsElement.textContent = seconds.toString();
    }
  }

  // Actualizar la cuenta regresiva cada segundo
  setInterval(updateCountdown, 1000);
</script>

<div id="welcome">
  <!-- Sección principal -->
  <section class="bg-gray-light py-4">
    <div class="flex justify-center">
      <h1 class="text-2xl tracking-wider mb-0 text-gray-700">
        Boda Heizel y Greudys
      </h1>
    </div>
  </section>

  <section>
    <ImageCarousel images={images} />
  </section>

